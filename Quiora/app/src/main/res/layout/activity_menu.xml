<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/cinzaFundo"
    android:layout_height="match_parent"
    tools:context=".activity.MenuActivity">

    <include android:id="@+id/toolbarXML" layout="@layout/top_toolbar"/>

    <LinearLayout android:id="@+id/ads"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_borders_l"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toBottomOf="@id/toolbarXML">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/rounded_borders_l"
            android:scaleType="centerCrop"
            android:src="@drawable/fotodinheiroapp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quer pagar menos?"
            android:textColor="@color/black"
            android:layout_gravity="start"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/montserrat_bold"/>

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Nós nos importamos com o seu dinheiro. Descubra nossas vantagens exclusivas para economizar mais!"
            android:layout_gravity="start"
            android:textColor="@color/black"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            />
        <Button
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="SAIBA MAIS"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_borders_l_border_blue"
            android:textColor="@color/lightBlue"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ads"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:layout_width="350dp"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:text="Minha conta"
            android:textColor="@color/black"
            android:background="@drawable/rounded_borders_l"
            android:backgroundTint="@color/white"
            android:gravity="start|center_vertical"
            android:paddingStart="15dp"/>
        <Button
            android:layout_width="350dp"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:text="Configurações"
            android:textColor="@color/black"
            android:background="@drawable/rounded_borders_l"
            android:backgroundTint="@color/white"
            android:gravity="start|center_vertical"
            android:paddingStart="15dp"/>
        <Button
            android:layout_width="350dp"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:text="Trocar idioma"
            android:textColor="@color/black"
            android:background="@drawable/rounded_borders_l"
            android:backgroundTint="@color/white"
            android:gravity="start|center_vertical"
            android:paddingStart="15dp"/>
        <Button
            android:layout_width="350dp"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:text="Fale Conosco"
            android:textColor="@color/black"
            android:background="@drawable/rounded_borders_l"
            android:backgroundTint="@color/white"
            android:gravity="start|center_vertical"
            android:paddingStart="15dp"/>

        <Button android:id="@+id/btnSair"
            android:layout_width="350dp"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:text="Sair"
            android:textAllCaps="true"
            android:background="@drawable/rounded_borders_l"
            android:backgroundTint="@color/brown"
            android:textColor="@color/white"
            android:gravity="start|center_vertical"
            android:paddingStart="15dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>