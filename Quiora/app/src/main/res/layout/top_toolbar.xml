<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:background="@color/cinzaFundo"
    android:layout_height="wrap_content">

    <ImageView android:id="@+id/imgQuiora"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/quiora"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quiora"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/darkBlue"
        android:layout_toRightOf="@id/imgQuiora"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"/>

    <ImageButton android:id="@+id/faleConoscoAtendente"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:visibility="gone"
        android:src="@drawable/headset"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="fitCenter"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:layout_toStartOf="@id/menuHamb"/>

    <ImageButton android:id="@+id/fecharMenu"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:visibility="gone"
        android:src="@drawable/reject"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="?attr/selectableItemBackgroundBorderless"/>

    <ImageButton android:id="@+id/menuHamb"
        android:layout_width="wrap_content"
        android:backgroundTint="@color/red"
        android:layout_height="wrap_content"
        android:src="@drawable/menublue"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        />

</RelativeLayout>